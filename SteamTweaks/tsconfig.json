{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2022",
        "noImplicitAny": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "inlineSourceMap": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "useDefineForClassFields": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "lib": [
            "esnext",
            "DOM"
        ],
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}